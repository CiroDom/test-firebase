<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_sign_in"
    app:startDestination="@id/nav_person">

    <fragment android:id="@+id/nav_person"
        android:name="com.example.testfirebasestackmobile.ui.form_sign_in.PersonFrag"
        tools:layout="@layout/frag_person">
        <action android:id="@+id/nav_act_person_to_account"
            app:destination="@id/nav_account"/>
    </fragment>

    <fragment android:id="@+id/nav_account"
        android:name="com.example.testfirebasestackmobile.ui.form_sign_in.AccountFrag"
        tools:layout="@layout/frag_account"/>

</navigation>